<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SocialPublisher.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:SocialPublisher.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SocialPublisher.Views.MainWindow"
        x:DataType="vm:PublisherViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SocialPublisher">

  <Design.DataContext>
    <vm:PublisherViewModel />
  </Design.DataContext>
  <Window.KeyBindings>
    <KeyBinding Gesture="Ctrl+V" Command="{Binding PasteCommand}" />
  </Window.KeyBindings>

  <Grid RowDefinitions="*, Auto" Margin="10">
    <ScrollViewer Grid.Row="0">
      <ItemsControl ItemsSource="{Binding Images}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Margin="5" CornerRadius="4" ClipToBounds="True">
              <Image Source="{Binding DisplayImage}" Width="150" Height="150" Stretch="UniformToFill" />
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>


    <Grid Grid.Row="1" ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto" Margin="0, 10, 0, 0">
      <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Caption}" Watermark="Enter caption here..." AcceptsReturn="True" Height="80" Margin="0, 0, 0, 10" />
      <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="Gray"/>
      <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="10">
        <Button Command="{Binding PasteCommand}" Content="Paste"/>
        <Button Command="{Binding ClearCommand}" Content="Clear"/>
        <Button Command="{Binding SendCommand}" Content="Send" Classes="accent" Background="Green" Foreground="White" IsEnabled="{Binding !IsBusy}" />
      </StackPanel>
      <ProgressBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" IsIndeterminate="True" IsVisible="{Binding IsBusy}" Margin="0, 0, 0, 5"/>
    </Grid>
  </Grid>

  <!--<views:MainView />-->

</Window>
