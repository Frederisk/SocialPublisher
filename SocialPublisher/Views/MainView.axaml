<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SocialPublisher.ViewModels"
             xmlns:ic="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:PublisherViewModel"
             xmlns:views="using:SocialPublisher.Views"
             x:Class="SocialPublisher.Views.MainView">
  <Design.DataContext>
    <vm:PublisherViewModel>
      <x:Arguments>
        <x:Null /><x:Null /><x:Null />
      </x:Arguments>
    </vm:PublisherViewModel>
  </Design.DataContext>

  <UserControl.KeyBindings>
    <KeyBinding Gesture="Ctrl+Shift+V" Command="{Binding PasteCommand}" />
  </UserControl.KeyBindings>

  <SplitView IsPaneOpen="{Binding IsSettingsOpen}" DisplayMode="Overlay" PanePlacement="Right" OpenPaneLength="320">
    <SplitView.Pane>
      <Border Background="{DynamicResource SystemRegionBrush}" BorderBrush="Gray" BorderThickness="1, 0, 0, 0">
        <Grid RowDefinitions="Auto, *, Auto" Margin="15">
          <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0, 0, 0, 15">
            <TextBlock Grid.Column="0" Text="API Settings" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" />
            <Button Grid.Column="1" Command="{Binding ToggleSettingsCommand}" Background="Transparent" >
              <ic:SymbolIcon Symbol="Dismiss" FontSize="20" />
            </Button>
          </Grid>
          <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="10">
              <TextBlock Text="Telegram Bot Token" FontWeight="SemiBold" />
              <TextBox Text="{Binding AppSettings.TelegramToken}" PasswordChar="*" Watermark="123456:ABC-DEF..." />
              <TextBlock Text="Telegram Chat ID" FontWeight="SemiBold" />
              <TextBox Text="{Binding AppSettings.TelegramChatId}" Watermark="-123456789" />

              <TextBlock Text="Mastodon Instance" FontWeight="SemiBold" />
              <TextBox Text="{Binding AppSettings.MastodonInstanceUrl}" Watermark="https://mastodon.social" />
              <TextBlock Text="Mastodon Access Token" FontWeight="SemiBold" />
              <TextBox Text="{Binding AppSettings.MastodonAccessToken}" PasswordChar="*" Watermark="Your Mastodon Access Token" />

              <TextBlock Text="Alter Mastodon Instance" FontWeight="SemiBold" />
              <TextBox Text="{Binding AppSettings.AlterMastodonInstanceUrl}" Watermark="https://mastodon.online" />
              <TextBlock Text="Alter Mastodon Access Token" FontWeight="SemiBold" />
              <TextBox Text="{Binding AppSettings.AlterMastodonAccessToken}" PasswordChar="*" Watermark="Your Alter Mastodon Access Token" />

              <TextBlock Text="Pixiv Refresh Token" FontWeight="SemiBold" />
              <TextBox Text="{Binding AppSettings.PixivRefreshToken}" PasswordChar="*" Watermark="Your Pixiv Refresh Token" />
              <TextBlock Text="Images Storage Path" FontWeight="SemiBold" />
              <TextBox Text="{Binding AppSettings.ImagesStoragePath}" Watermark="Your Pixiv Refresh Token" />
            </StackPanel>
          </ScrollViewer>
          <Button Grid.Row="2" Command="{Binding SaveSettingsCommand}" Content="Save" Classes="accent" Background="#1D9BF0" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0, 15, 0, 0" Height="40" />
        </Grid>
      </Border>
    </SplitView.Pane>
    <SplitView.Content>
      <Grid RowDefinitions="Auto, *, Auto" Margin="10">
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0, 0, 0, 10">
          <TextBlock Grid.Column="0" Text="Social Publisher" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
          <Button Grid.Column="1" Command="{Binding ToggleSettingsCommand}" Background="Transparent">
            <ic:SymbolIcon Symbol="Settings" FontSize="24" />
          </Button>
        </Grid>
        <ScrollViewer Grid.Row="1">
          <ItemsControl ItemsSource="{Binding Images}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <WrapPanel />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <views:ImageItemView />
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
        <Grid Grid.Row="2" ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto, Auto, Auto" Margin="0, 5, 0, 0">
          <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="5">
            <CheckBox Content="Alter" IsChecked="{Binding IsAlter}" />
            <CheckBox Content="Low Quality" IsChecked="{Binding IsLowQuality}" />
          </StackPanel>
          <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Caption}" Watermark="Enter caption here..." AcceptsReturn="True" MinHeight="60" MaxHeight="120" Margin="0, 0, 0, 5" />
          <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" IsIndeterminate="{Binding IsBusy}" IsVisible="True" Margin="0, 0, 0, 5"/>
          <WrapPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0">
            <WrapPanel.Styles>
              <Style Selector="Button">
                <Setter Property="Margin" Value="2" />
                <!--<Setter Property="MinHeight" Value="44" />-->
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <!--<Setter Property="FontSize" Value="16" />-->
                <!--<Setter Property="Padding" Value="10, 5" />-->
              </Style>
            </WrapPanel.Styles>
            <Button Command="{Binding AnalysisCommand}" Content="_Analysis" IsEnabled="{Binding !IsBusy}"/>
            <Button Command="{Binding PasteCommand}" Content="_Paste" IsEnabled="{Binding !IsBusy}"/>
            <Button Command="{Binding ClearCommand}" Content="_Clear" IsEnabled="{Binding !IsBusy}"/>
            <!--<Button Command="{Binding SendCommand}" Content="Send" Classes="accent" Background="Green" Foreground="White" IsEnabled="{Binding !IsBusy}" />-->
            <Button Command="{Binding SendTelegramCommand}" Content="Send to _Telegram" Classes="accent" Background="Blue" Foreground="White" IsEnabled="{Binding !IsBusy}" />
            <Button Command="{Binding SendMastodonCommand}" Content="Send to _Mastodon" Classes="accent" Background="Purple" Foreground="White" IsEnabled="{Binding !IsBusy}" />
            <Button Command="{Binding CancelOperationCommand}" Content="_Cancel" Background="#FF6347" Foreground="White" IsEnabled="{Binding IsBusy}" />
          </WrapPanel>
          <TextBlock Grid.Row="4" Grid.Column="0" Text="{Binding StatusMessage}" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="Gray" IsEnabled="{Binding !IsBusy}"/>
        </Grid>
        <Border Grid.Row="0" Grid.RowSpan="3" IsVisible="{Binding IsLightboxOpen}" Background="#E6000000" Margin="-10">
          <Grid>
            <Button Command="{Binding CloseLightboxCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" BorderThickness="0" CornerRadius="0">
              <Button.Styles>
                <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                  <Setter Property="Background" Value="Transparent" />
                </Style>
              </Button.Styles>
            </Button>
            <Image Source="{Binding LightboxImage}" Stretch="Uniform" Margin="20" IsHitTestVisible="False" RenderOptions.BitmapInterpolationMode="HighQuality" />
            <Button Command="{Binding CloseLightboxCommand}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Padding="10" CornerRadius="20" Background="#66000000" Foreground="White">
              <ic:SymbolIcon Symbol="Dismiss" FontSize="24" />
            </Button>
          </Grid>
        </Border>
      </Grid>
    </SplitView.Content>
  </SplitView>
</UserControl>
